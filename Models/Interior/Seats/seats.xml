<PropertyList>

  <path>seats.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>sieges</object-name>
    <object-name>supportsiege</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>sieges</object-name>
    <object-name>supportsiege</object-name>
    <condition>
      <not><property>/sim/rendering/rembrandt/enabled</property></not>
    </condition>
    <emission>
      <red>   0.01 </red>
      <green> 0.01 </green>
      <blue>  0.01 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>sieges</object-name>
    <object-name>supportsiege</object-name>
    <condition>
      <property>/sim/rendering/rembrandt/enabled</property>
    </condition>
    <emission>
      <red>   0.003 </red>
      <green> 0.003 </green>
      <blue>  0.003 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

</PropertyList>
